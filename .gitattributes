# Set default behavior to automatically normalize line endings
* text=auto

# Force line endings for specific file types
*.cs text eol=crlf
*.csproj text eol=crlf
*.sln text eol=crlf
*.json text eol=crlf
*.md text eol=crlf
*.yml text eol=crlf
*.yaml text eol=crlf
*.xml text eol=crlf
*.config text eol=crlf
*.props text eol=crlf
*.targets text eol=crlf

# Force LF line endings for cross-platform files
*.sh text eol=lf
*.bash text eol=lf
Dockerfile text eol=lf
*.dockerfile text eol=lf

# Binary files (should not be normalized)
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.mov binary
*.mp4 binary
*.avi binary
*.wmv binary
*.flv binary
*.webm binary
*.pdf binary
*.zip binary
*.tar binary
*.gz binary
*.7z binary
*.exe binary
*.dll binary
*.so binary
*.dylib binary
*.db binary
*.sqlite binary
*.sqlite3 binary

# Database files (should be ignored but if tracked, treat as binary)
*.db binary
*.db-shm binary
*.db-wal binary
*.sqlite binary
*.sqlite3 binary

# Visual Studio files
*.user text eol=crlf
*.suo binary
*.cache binary
*.pdb binary
*.exe binary
*.dll binary

# Git merge drivers
*.sln merge=union
*.csproj merge=union
*.props merge=union
*.targets merge=union

# Language-specific settings
*.js text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.jsx text eol=lf
*.css text eol=lf
*.scss text eol=lf
*.html text eol=lf
*.htm text eol=lf

# Documentation
*.md text eol=lf
*.txt text eol=lf
*.rst text eol=lf

# Configuration files
*.config text eol=crlf
*.json text eol=crlf
*.yml text eol=lf
*.yaml text eol=lf
*.toml text eol=lf
*.ini text eol=crlf

# Scripts
*.ps1 text eol=crlf
*.bat text eol=crlf
*.cmd text eol=crlf
*.sh text eol=lf
*.bash text eol=lf

# Ignore files that should not be tracked
*.log text
*.tmp text
*.temp text
